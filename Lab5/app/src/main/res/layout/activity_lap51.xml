<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Lap5_1">

    <!-- Các EditText hiển thị chi tiết nhân viên -->
    <EditText
        android:id="@+id/edtMaSo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Mã số:"
        android:inputType="text" />

    <EditText
        android:id="@+id/edtHoTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Họ Tên:"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/numSDT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Số điện thoại:"
        android:inputType="number"
        android:minHeight="48dp" />

    <!-- Nút thêm mới -->
    <Button
        android:id="@+id/btnThemmoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm Mới"
        android:layout_gravity="center"
        />
    <!-- TextView hiển thị thông tin nhân viên -->
    <TextView
        android:id="@+id/tvNhanVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin nhân viên"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_marginTop="16dp" />

    <!-- ListView hiển thị danh sách nhân viên -->
    <ListView
        android:id="@+id/lvNhanVien"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        />

</LinearLayout>